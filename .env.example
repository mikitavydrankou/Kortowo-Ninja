##############################
# Production .env example
# Copy to .env and adjust secrets
##############################

NODE_ENV=production
LOG_LEVEL=info

# ---- Database ----
DB_DIALECT=mysql
DB_HOST=db
DB_PORT=3306
DB_NAME=kortowo
DB_USER=kortowo
DB_PASSWORD=change_me

# ---- JWT ----
JWT_SECRET=change_this_jwt_secret

# ---- Backend ----
API_PORT=3000
CLIENT_URL=https://kortowo.ninja

# ---- Frontend ----
# Use same-origin /api so cookies are first-party
VITE_API_URL=/api

# ---- Cookies ----
COOKIE_SECURE=true
COOKIE_SAMESITE=None
COOKIE_DOMAIN=kortowo.ninja

# ---- Traefik / TLS ----
ACME_EMAIL=you@example.com


# ---- Grafana ----
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ---- Notes ----
# For local dev:
# NODE_ENV=development
# CLIENT_URL=http://localhost:5173
# VITE_API_URL=http://localhost:3000/api
# COOKIE_SECURE=false
# COOKIE_SAMESITE=Lax